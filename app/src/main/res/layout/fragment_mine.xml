<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commBackground"
    android:orientation="vertical">

    <!-- =====主体栏目===== -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.8"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mine_press"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ivListImg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/tvSettingMsg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivListImg2"
                            android:paddingLeft="10dp"
                            android:text="加星文件"
                            android:textColor="#222222"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvSettingMsg2"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/line" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mine_press"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ivListImg3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/tvSettingMsg3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivListImg3"
                            android:paddingLeft="10dp"
                            android:text="我的标签"
                            android:textColor="#222222"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvSettingMsg3"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/line" />

                    <RelativeLayout
                        android:id="@+id/rlMistakes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mine_press"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ivListImg4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/tvSettingMsg4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivListImg4"
                            android:paddingLeft="10dp"
                            android:text="我的收藏"
                            android:textColor="#222222"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvSettingMsg4"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/reShare"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_mine_press"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/ivListImg7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tvSettingMsg7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ivListImg7"
                        android:paddingLeft="10dp"
                        android:text="分享朋友"
                        android:textColor="#222222"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvSettingMsg7"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:src="@mipmap/icon_right"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/reOpinion"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mine_press"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ivListImg8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/tvSettingMsg8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivListImg8"
                            android:paddingLeft="10dp"
                            android:text="意见反馈"
                            android:textColor="#222222"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvSettingMsg8"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/line" />

                    <RelativeLayout
                        android:id="@+id/reAbout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mine_press"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/ivListImg9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/tvSettingMsg9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivListImg9"
                            android:paddingLeft="10dp"
                            android:text="关于vNote"
                            android:textColor="#222222"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvSettingMsg9"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnLineOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_mine_lineoff"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="退出登录"
                    android:textColor="#f75655"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>